{% extends 'master' %}

{% block content %}
<div class="page-header">

  {% if old('errors') %}
  <div class="alert alert-danger">
    <ul>
      {% for error in old('errors') %}
        <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}

  <form method="post" action="/category/create">
    {{ csrfField }}
    <h1><input name="name" type="text" value="Category name" style="padding: 5px"></h1>
    <input type="submit" value="Mehet" style="display: block; margin: 5px 0;">
  </form>
</div>

{% endblock %}