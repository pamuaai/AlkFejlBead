{% extends 'master' %}

{% block content %}
<form class="form-horizontal" data-toggle="validator" action="/register" method="POST">
  {{ csrfField }}
  <div class="form-group">
    <label for="inputEmail" class="col-sm-2 control-label">E-mail cím</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail" name="email" value="{{ old('email') }}" reqired>
    </div>
  </div>
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Megjelenítendő név</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputName" name="name" value="{{ old('name') }}" required>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label">Jelszó</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword" name="password" required data-minlength="5">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPasswordAgain" class="col-sm-2 control-label">Jelszó megint</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPasswordAgain" name="password_again" data-match="#inputPassword">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Mehet</button>
    </div>
  </div>
</form>
{% endblock %}